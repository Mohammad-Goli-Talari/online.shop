# Frontend Environment Configuration
# Copy this file to .env.local for local development
# Set these in Vercel environment variables for production

# API Configuration
VITE_API_BASE_URL=https://your-ecommerce-backend.onrender.com/api
VITE_USE_MOCKS=false

# Payment Gateway Configuration
VITE_BANK_GATEWAY_URL=https://your-bank-gateway.onrender.com

# Frontend URLs (for callbacks)
VITE_FRONTEND_URL=https://your-frontend.vercel.app
VITE_PAYMENT_SUCCESS_URL=https://your-frontend.vercel.app/payment-success
VITE_PAYMENT_FAILURE_URL=https://your-frontend.vercel.app/payment-failure
VITE_PAYMENT_CANCELLED_URL=https://your-frontend.vercel.app/payment-cancelled

# Webhook Configuration (for backend)
VITE_WEBHOOK_BASE_URL=https://your-ecommerce-backend.onrender.com

# Note: For local development, these will automatically fallback to:
# - http://localhost:8088/api (API)
# - http://localhost:4000 (Bank Gateway)
# - http://localhost:5173 (Frontend URLs)
# - http://localhost:8088 (Webhook)
